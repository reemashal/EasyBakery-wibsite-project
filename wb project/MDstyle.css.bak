.holder{
	max-width: 1100px;
	padding:2rem;
	margin:0 auto;
	background-image: url("bc.jpg");
}
   
   .container{
	   background: #C2BFB6;
	   text-align: center;
	   max-width: 800px;
	   color: #604232;
	   margin: auto;
	   border-radius: 10px;
} 
.box {
	width:200;
	border-radius: 5px;
	padding:10px 10px;
	font-size:15px	
}

.btn{
	
	width:200;
	border-radius: 5px;
	padding:10px 10px;
	font-size:15px	
	background: white;
	font-size:15px	
}
.btn:hover {
	background: #ABA79B;
}
.product-display-table
{
	  background: #C2BFB6;
	   text-align: center;
	   max-width: 800px;
	   color: #604232;
	   margin: auto;
	   border-radius: 10px;
	
	
}

.container .product-display-table td{
	padding: 1.7rem;
	font-size: 2rem;
	
}

.container .product-display-table th{
	padding: 1.7rem;
	
}



h3{
	text-align: center;
	font-size: 2rem;
	color: var(--black);
	text-transform: uppercase;
	margin-bottom: 1rem;
	
}

.admin-product-form-container form{
	text-transform: uppercase;
	color:#604232;
	margin-bottom: 1rem;
	text-align: center;
	font-size: 2.5rem;
	
}
.admin-product-form-container form .box{
	
	width:100%;
	border-radius: .5rem;
	padding: 1rem 1.2rem;
	font-size: 1rem;
	margin:1rem 0;
	background: white;
	
}



